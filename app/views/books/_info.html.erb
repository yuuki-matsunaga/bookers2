<%= flash[:success] %>
<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <% book.errors.full_messages.each do |message| %>
    <%= message %> error
  <% end %>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(user),class:"btn-outline-secondary btn-block btn" do  %>
      　  <i class="fas fa-user-cog edit_user_7693"></i>
      　<% end %>
      </div>
      <h2 class="mt-3">New book</h2>
        <%= form_with model:book,url:'/books',local:true do |book| %>
        <h4>Title</h4>
        <%= book.text_field :title ,class:'form-control' %>
        <h4>Opinion</h4>
        <%= book.text_area :body ,class:'form-control'%>
        <%= book.submit 'Create Book',class: 'btn btn-success' %>
        <% end %>
    </div>
